<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <div class="panel panel-default">
      <div class="panel-body text-center">
        <%= form_tag(markers_path) do %>
        　  <%= hidden_field_tag :video_id, video.video_id %>
        　  <p>Timeは "hh:mm:ss" の形式で入力してください。</p>
        　<div class="form-group">
            <label>Time</label>
            <%= text_field_tag :time %>
          </div>  
          
          <div class="form-group">
            <label>Memo</label>
            <%= text_area_tag :content %>
          </div>
          
          <%= submit_tag 'しおりを挟む', class: 'btn btn-primary btn-block' %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>