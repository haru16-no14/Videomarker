<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_tag(new_video_path, method: :get, class: 'form-inline') do %>
        <div class="form-group">
          <%= text_field_tag :q, @keyword, class: 'form-control input-lg', placeholder: "キーワードを入力", size: 40 %>
        </div>
        <%= submit_tag '動画を検索', class: 'btn btn-primary btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'videos', videos: @videos %>